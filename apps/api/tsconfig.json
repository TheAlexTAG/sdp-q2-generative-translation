{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",

    "types": ["node"],

    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": false
  },
  "include": ["src"]
}
